#sxhkdrc

super + Return
	$TERMINAL
super + shift + Return
	dmenuplumb
super + p
	dmenu_run
super + w
	surf-browse
super + n
	$TERMINAL nmtui
super + x
	slock
super + shift + x
	passmenu
super + e
	$TERMINAL $EMAIL; pkill -RTMIN+12 dwmblocks
super + r
	$TERMINAL newsboat
super + v
	dmenucalc
super + a
	$TERMINAL ncmpcpp
super + shift + a
	$TERMINAL pulsemixer
super + s
	dmenusearx
super + comma
	mpc prev
super + period
	mpc next
super + slash
	mpc toggle
super + c
	$TERMINAL calcurse
super + shift + c
	$TERMINAL htop
XF86AudioMute
	pulsemixer --toggle-mute
XF86Audio{Raise,Lower}Volume
	pulsemixer --change-volume {+,-}5; pkill -RTMIN+10 dwmblocks
super + F6
	pulsemixer --toggle-mute; pkill -RTMIN+10 dwmblocks
super + F{7,8}
	pulsemixer --change-volume {-,+}5; pkill -RTMIN+10 dwmblocks
super + F{9,10}
	dmenurecord {_,kill}
Print
	maim ~/pics/screenshot-$(date '+%y%m%d-%H%M-%S').png
shift + Print
	maimpick

#dwm
super + shift + {q,r}
	bspc {quit,wm -r}
super + q
	bspc node -c
super + m
	bspc desktop -l next
super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}
super + {_,shift + }{1-9}
	bspc {desktop -f,node -d} '^{1-9}'
super + b
	polybar toggle

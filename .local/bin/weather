#!/bin/sh
# weather: send current weather as notification
# deps: dunst, curl, jq

notify-send "$(curl -s "wttr.in/?format=j1" | jq -Mr ". | \"Weather in \" + .nearest_area[0].areaName[0].value + \":\n\" + .current_condition[0].weatherDesc[0].value + \"\nTemperature: \" + .current_condition[0].temp_F + \"Â°F\nWindspeed: \" + .current_condition[0].windspeedMiles + \"mph\"")"

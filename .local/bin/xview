#!/bin/sh

ext=$(echo "$1" | awk -F '.' '{print $NF}')

case $ext in
	mp4) swallow mpv "$1" ;;
	mkv) swallow mpv "$1" ;;
	avi) swallow mpv "$1" ;;
	webm) swallow mpv "$1" ;;
	mp3) swallow mpv "$1" ;;
	ogg) swallow mpv "$1" ;;
	opus) swallow mpv "$1" ;;
	jpg) swallow sxiv "$1" ;;
	png) swallow sxiv "$1" ;;
	webp) swallow sxiv "$1" ;;
	pdf) swallow zathura "$1" ;;
	ps) swallow zathura "$1" ;;
esac

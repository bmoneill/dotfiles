#!/bin/sh
# See COVID-19 statistics for the world or a country

country="$1"
args="$country?source=2"

stats="$(curl -s "https://corona-stats.online/$args" | sed -r 's/║//g;s/\s*//g;s/│/|/g;s/\x1B\[([0-9]{1,3}(;[0-9]{1,2})?)?[mGK]//g' | sed '1,3d')"

total="$(echo $stats | awk -F '|' '{print $3}')"
[ -z $total ] && echo "No data found for this country!" >&2 && exit 1

echo "☢$total"

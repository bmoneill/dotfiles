/* degrees to radians */
define rad(d) {
	auto n
	n = d * 180 / (4*a(1))
	return n
}

/* factorial */
define fact(n) {
  if (n < 2) return(1)
  return(n * fact(n - 1))
}

/* combination */
define c(n,k) {
	return(fact(n)/(fact(n-k)*fact(k)))
}

/* permutation */
define p(n,r) {
	return(fact(n)/fact(n-r))
}

/* net present value */
define npv(c, b, r, t) {
	return ((b - c) / (1 + r)^t)
}

/* internal rate of return */
define irr(c, i) {
	return c / (1+i)
}
